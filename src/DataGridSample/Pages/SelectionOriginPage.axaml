<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.Pages.SelectionOriginPage"
             x:DataType="viewModels:SelectionOriginViewModel">
  <UserControl.DataContext>
    <viewModels:SelectionOriginViewModel/>
  </UserControl.DataContext>

  <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="2*,3*" Margin="12" RowSpacing="10" ColumnSpacing="12">
    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Spacing="4">
      <TextBlock Classes="h2">Selection origin metadata</TextBlock>
      <TextBlock Text="SelectionChanged now carries DataGridSelectionChangedEventArgs with a Source flag, IsUserInitiated, and the triggering event (when available). Try pointer, keyboard, SelectAll(), SelectionModel, bindings, and ItemsSource swaps to see how the origin is annotated."
                 TextWrapping="Wrap" />
    </StackPanel>

    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8">
      <Button Content="Programmatic select (SelectedItem)" Command="{Binding ProgrammaticSelectCommand}" />
      <Button Content="Replace ItemsSource" Command="{Binding ReplaceItemsSourceCommand}" />
      <Button Content="Select via SelectionModel" Command="{Binding SelectViaModelCommand}" />
      <Button Content="Clear bound SelectedItems" Command="{Binding ClearBoundSelectionCommand}" />
    </StackPanel>

    <DataGrid Grid.Row="2"
              Grid.Column="0"
              ItemsSource="{Binding Items}"
              SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
              SelectedItems="{Binding BoundSelectedItems, Mode=TwoWay}"
              Selection="{Binding SelectionModel}"
              SelectionMode="Extended"
              AutoGenerateColumns="True"
              HeadersVisibility="All"
              SelectionChanged="OnSelectionChanged"
              Height="440" />

    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="8">
      <TextBlock Classes="h3" Text="Selection change log" />
      <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
              BorderThickness="1"
              CornerRadius="4"
              Padding="4">
        <ListBox ItemsSource="{Binding EventLog}" Height="360" />
      </Border>
      <TextBlock Text="{Binding LastEvent}" TextWrapping="Wrap" />
    </StackPanel>
  </Grid>
</UserControl>
